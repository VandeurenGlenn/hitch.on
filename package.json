{
  "build": {
    "appId": "com.basicelements.hitch.on",
    "mac": {
      "app-category-type": "public.app-category.productivity"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "install-app-deps && bower install",
    "install": "npm run postinstall && npm run rebuild",
    "start": "electron ./app",
    "start-dev": "npm run build && electron ./app",
    "rebuild": "cd app && npm rebuild --runtime=electron --target=1.6.1 --disturl=https://atom.io/download/atom-shell --abi=53",
    "build": "backed -b",
    "pack": "build --dir",
    "dist": "build",
    "release": "build"
  },
  "devDependencies": {
    "electron": "^1.6.1",
    "electron-builder": "^14.5.1"
  },
  "eslintConfig": {
    "globals": {
      "hitchon": true
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
